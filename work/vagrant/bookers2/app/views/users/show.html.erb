<body>

  <h2>User info</h2>


 <h2>New book</h2>
  <%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_field :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

  <p id="notice"></p>

  <h2>Users</h2>

  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= user.profile_image_id %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= user.introduction %>
          </td>
          <td>
            <%= link_to "Show", book_path(user) %>
          </td>
        </tr>
        <% end %>
     </tbody>
  </table>