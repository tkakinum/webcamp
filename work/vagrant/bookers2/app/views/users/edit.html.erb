<body>
	<div class="container">
	    <div class="row">
	      <div class="col-lg-4">
          <h2>User info</h2>
          <% if @user.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
            <%= form_for(@user) do |f| %>
              <h4>Name</h4>
              <%= f.text_field :name %>
              <h4>Image</h4>
              <%= f.attachment_field :profile_image, class: "user-edit-form" %>
              <h4>Introduction</h4>
              <%= f.text_field :introduction %>
              <%= f.submit 'Update User' %>
            <% end %>
	      </div>
</body>