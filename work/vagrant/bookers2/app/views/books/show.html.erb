<body>
  <% if flash[:notice] %>
    <div class="flash">
     <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-lg-4">
            <h2>User info</h2>
            <img class="attachment user profile_image fallback" src="/assets/no_image.jpg" alt="No image">
            <table class="table">
              <tbody>
                <tr></tr>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
              </tbody>
            </table>


          <div class="row">
            <div>
              <%= link_to "", new_user_path(current_user.id),class: "col-xs-8 btn btn-default glyphicon glyphicon-wrench" %>
            </div>
          </div>


          <h2>New book</h2>
            <%= form_for(@book) do |f| %>
              <h4>Title</h4>
              <%= f.text_field :title %>
              <h4>Opinion</h4>
              <%= f.text_field :body %>
              <%= f.submit 'Create Book' %>
            <% end %>

            <p id="notice"></p>
      </div>

      <div class="col-lg-8">
       <h2>Books detail</h2>
         <table>
          <thead>
           <tr>
            <th colspan="23"></th>
          </tr>
           </thead>

          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <img class="attachment user profile_image fallback" src="/assets/no_image.jpg" alt="No image"><br>
                <%= link_to @user.name, user_path(@user) %>
              </td>
              <td>
                <%= book.title %>
              </td>
              <td>
                <%= book.body %>
              </td>
              <td>
                  <%= link_to "Edit", edit_book_path(book) %>
              </td>
              <td>
                  <%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: '本当に消しますか？'} %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>