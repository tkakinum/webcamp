<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
            <h2>User info</h2>
            <img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" alt="No image">
            <table class="table">
              <tbody>
                <tr></tr>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
              </tbody>
            </table>

        <h2>New book</h2>
            <%= form_for(@book) do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>
          <h4>Opinion</h4>
            <%= f.text_field :body %>
            <%= f.submit 'Create Book' %>
          <% end %>

          <p id="notice"></p>

      </div>

      <div class="col-lg-8">
      	<h2>Users</h2>
      	<table>
      		<thead>
        		<tr>
      	      <th>image</th>
      	      <th>name</th>
      	      <th colspan="3"></th>
      	    </tr>
      		</thead>

        	<tbody>
            <% @users.each do |user| %>
              <tr>
              <td>
                <img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" alt="No image">
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= user.introduction %>
              </td>
              <td>
                <%= link_to "Show", user_path(user.id) %>
              </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>