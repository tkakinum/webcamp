<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookers</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head>

  <body>

    <div class="header" id="header">
      <nav class="navbar navbar-main navbar-shadow" role="navigation" id="slide-nav">
        <div class="container relative">
          <div class="navbar-header">
            <h3>Bookers</h3>

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div id="slidemenu">
            <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
              <% if user_signed_in? %>
                <li class="">
                  <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group">
                      <button class="btn btn-default" aria-label="Justify" type="button">
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                         <%= link_to 'Home', books_path %>
                      </button>
                    </div>
                  </div>
                </li>
                <li class="">
                  <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group">
                      <button class="btn btn-default" aria-label="Justify" type="button">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                          <%= link_to 'Users', users_path %>
                      </button>
                    </div>
                  </div>
                </li>
                <li class="">
                  <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group">
                      <button class="btn btn-default" aria-label="Justify" type="button">
                        <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
                          <%= link_to 'Books', books_path %>
                        </button>
                    </div>
                  </div>
                </li>
                <li class="">
                  <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group">
                      <button class="btn btn-default" aria-label="Justify" type="button">
                        <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                        <%= link_to "logout", destroy_user_session_path, method: :delete %>
                      </button>
                    </div>
                  </div>
                </li>
              <% else %>
                <li class="">
                  <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group">
                      <button class="btn btn-default" aria-label="Justify" type="button">
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                        <%= link_to "Home", root_path %>
                      </button>
                    </div>
                  </div>
                </li>
                <li class="">
                  <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group">
                      <button class="btn btn-default" aria-label="Justify" type="button">
                        <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
                      <%= link_to "About", home_about_path %>
                      </button>
                    </div>
                  </div>
                </li>
                <li class="">
                  <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group">
                      <button class="btn btn-default" aria-label="Justify" type="button">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                      <%= link_to "sign up", new_user_registration_path %>
                      </button>
                    </div>
                  </div>
                </li>
                <li class="">
                  <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group">
                      <button class="btn btn-default" aria-label="Justify" type="button">
                        <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
                        <%= link_to "login", new_user_session_path %>
                      </button>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </div>

    <%= yield %>

    <footer>
      <div class="col-md-2">
        <div class="col">
           <h4>CopyRight Infratop.inc</h4>
        </div>
      </div>
    </footer>
  </body>
</html>
