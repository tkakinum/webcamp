<body>
    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
      <%= form_for(@book) do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_field :body %>
        <%= f.submit 'Update Book' %>
      <% end %>

<%= link_to "Show", book_path(@book) %>
<a class="back" href="/books">Back</a>

</body>