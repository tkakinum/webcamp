<body>
  <% if flash[:notice] %>
    <div class="flash">
     <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-lg-4">
            <h2>User info</h2>
            <img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" alt="No image">
            <table class="table">
              <tbody>
                <tr></tr>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
              </tbody>
            </table>

        <div class="row">
          <% if @user.id == current_user.id %>
            <div class="btn-toolbar" role="toolbar">
              <div class="btn-group">
                <button class="btn btn-default" aria-label="Justify" type="button">
                  <span class="glyphicon glyphicon-wrench" aria-hidden="true">
                    <%= link_to "プロフィール編集", edit_user_path(@user) %>
                  </span>
                </button>
              </div>
            </div>
          <% end %>
        </div>

          <h2>New book</h2>
            <%= form_for(@book) do |f| %>
              <h4>Title</h4>
              <%= f.text_field :title %>
              <h4>Opinion</h4>
              <%= f.text_field :body %>
              <%= f.submit 'Create Book' %>
            <% end %>

          	<p id="notice"></p>
      </div>

      <div class="col-lg-8">
    	 <h2>Books</h2>
    	   <table>
    		  <thead>
        		<tr>
              <th></th>
      	      <th>Title</th>
      	      <th>Opinion</th>
      	      <th colspan="3"></th>
      	    </tr>
    		  </thead>

          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" alt="No image"><br>
                <%= link_to @user.name, user_path(@user) %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>