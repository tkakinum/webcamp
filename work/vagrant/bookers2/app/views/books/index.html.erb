<body>
  <% if flash[:notice] %>
    <div class="flash">
     <%= flash[:notice] %>
    </div>
  <% end %>

  <h2>User info</h2>


 <h2>New book</h2>
  <%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_field :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

	<p id="notice"></p>

	<h2>Books</h2>

	<table>
		<thead>
  		<tr>
	      <th>Title</th>
	      <th>Opinion</th>
	      <th colspan="3"></th>
	    </tr>
		</thead>

  	<tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= book.title %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
        <% end %>
     </tbody>
  </table>
</body>