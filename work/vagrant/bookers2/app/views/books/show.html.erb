<body>
  <% if flash[:notice] %>
    <div class="flash">
     <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <h2>User info</h2>
          <div class="profile-container">
            <h3 class="profile-name"><%= @user.name %></h3>

              <% if @user.id == current_user.id %>
                <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
              <% end %>
          </div>


          <h2>New book</h2>
            <%= form_for(@book) do |f| %>
              <h4>Title</h4>
              <%= f.text_field :title %>
              <h4>Opinion</h4>
              <%= f.text_field :body %>
              <%= f.submit 'Create Book' %>
            <% end %>

            <p id="notice"></p>
      </div>

      <div class="col-lg-8">
       <h2>Books detail</h2>
         <table>
          <thead>
           <tr>
            <th colspan="23"></th>
          </tr>
           </thead>

          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= book.title %>
              </td>
              <td>
                <%= book.body %>
              </td>
              <td>
                  <%= link_to "Edit", edit_book_path(book) %>
              </td>
              <td>
                  <%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: '本当に消しますか？'} %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>