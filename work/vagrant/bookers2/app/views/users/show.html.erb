<body>
  <% if flash[:notice] %>
    <div class="flash">
     <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-lg-4">
            <h2>User info</h2>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
            <table class="table">
              <tbody>
                <tr></tr>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
              </tbody>
            </table>

          <div class="row">
            <% if @user.id == current_user.id %>
            <div>
              <%= link_to "", edit_user_path(current_user.id),class: "col-xs-9 btn btn-default glyphicon glyphicon-wrench" %>
            </div>
            <% end %>
          </div>

          <h2>New book</h2>
            <%= form_for(@book) do |f| %>
              <h4>Title</h4>
              <%= f.text_field :title %>
              <h4>Opinion</h4>
              <%= f.text_field :body %>
              <%= f.submit 'Create Book' %>
            <% end %>

            <p id="notice"></p>
      </div>

      <div class="col-lg-8">
       <h2>Books</h2>
         <table>
          <thead>
           <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="23"></th>
          </tr>
           </thead>

          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
              </td>
              <td>
                <%= link_to book.title,book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>