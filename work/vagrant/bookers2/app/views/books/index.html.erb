<body>
  <div class="container">
    <div class="row">
      <% if @book.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="col-lg-3">
        <% if flash[:notice] %>
          <div class="flash">
           <%= flash[:notice] %>
          </div>
        <% end %>
            <h2>User info</h2>
            <img class="attachment user profile_image fallback" src="/assets/no_image.jpg" alt="No image">
            <table class="table">
              <tbody>
                <tr></tr>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
              </tbody>
            </table>

        <div class="row">
            <div>
              <%= link_to "", edit_user_path(current_user.id),class: "col-xs-9 btn btn-default glyphicon glyphicon-wrench" %>
            </div>
        </div>

          <h2>New book</h2>
            <%= form_for(@book) do |f| %>
              <h4>Title</h4>
              <%= f.text_field :title %>
              <h4>Opinion</h4>
              <%= f.text_field :body %>
              <%= f.submit 'Create Book' %>
            <% end %>

          	<p id="notice"></p>
      </div>

      <div class="col-lg-8">
    	 <h2>Books</h2>
    	   <table>
    		  <thead>
        		<tr>
              <th></th>
      	      <th>Title</th>
      	      <th>Opinion</th>
      	      <th colspan="3"></th>
      	    </tr>
    		  </thead>

          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <img class="attachment user profile_image fallback" src="/assets/no_image.jpg" alt="No image" style: width: 100px; height: 100px><br>
                <%= link_to @user.name, user_path(@user) %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>