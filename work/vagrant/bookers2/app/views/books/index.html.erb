<body>
  <% if flash[:notice] %>
    <div class="flash">
     <%= flash[:notice] %>
    </div>
  <% end %>

<div class="container">
    <div class="row">
      <div class="col-lg-4">
        <h2>User info</h2>
            <div class="profile-container">
              <h3 class="profile-name"><%= @user.name %></h3>
              <%= image_tag('', class: "img-circle pull-left profile-img", style: "width: 100px; height: 100px;") %>
          　　 <% if @user.id == current_user.id %>
                  <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
              <% end %>
            </div>


           <h2>New book</h2>
            <%= form_for(@book) do |f| %>
              <h4>Title</h4>
              <%= f.text_field :title %>
              <h4>Opinion</h4>
              <%= f.text_field :body %>
              <%= f.submit 'Create Book' %>
            <% end %>

          	<p id="notice"></p>
      </div>
    </div>
  </div>

  <div class="col-lg-8">
    <div class="row">
    	<h2>Books</h2>
    	<table>
    		<thead>
      		<tr>
    	      <th>Title</th>
    	      <th>Opinion</th>
    	      <th colspan="3"></th>
    	    </tr>
    		</thead>

      	<tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= book.title %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
            <% end %>
         </tbody>
      </table>
    </div>
  </div>
</body>